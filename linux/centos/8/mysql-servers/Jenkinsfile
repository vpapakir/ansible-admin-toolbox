pipeline {
    agent { label 'master' }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                script {
                  RESULT = sh(returnStdout: true, script: 'ansible-playbook -v ./linux/centos/8/01-basic-software.yml --user root --key-file ~/.ssh/id_rsa')
                }
                echo "${RESULT}"
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
                script {
                  RESULT = sh(returnStdout: true, script: 'ansible-playbook -v ./linux/centos/8/my-sql-servers/02-mysql-related-software.yml --user root --key-file ~/.ssh/id_rsa')
                }
                echo "${RESULT}"
            }
        }
    }
}
